<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewBase" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorSubtitleLight</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextBase">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorSubtitleLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBookName" parent="@style/TextViewBase">
        <item name="android:textColor">@color/colorDarkModeMessenger</item>
    </style>

    <style name="TextViewBookRetail" parent="@style/TextViewBase">
        <item name="android:textColor">@color/colorDarkModeMessenger</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorToolBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
